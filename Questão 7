#include <iostream>
using namespace std;

/*
Leia uma temperatura em graus Celsius e apresente-a convertida em graus Fahrenheit. A
fórmula de conversão é F=(9*C+160)/5, sendo F a temperatura em Fahrenheit e C a temperatura
em Celsius.
*/

int main()
{
    float celsius;
    float fahrent;
    
    cout << "Conversor de Celsius para Fahrenheit\n";
    cout << "Digite a temperatura em Celsius: ";
    cin >> celsius;
    
    fahrent =  (9*celsius + 160)/5;
    
    cout << celsius << " graus Ceulsius é igual a " << fahrent << " Fahrenheit.";
}
